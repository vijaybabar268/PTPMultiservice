@model PTPMultiservice.ViewModels.EmployeeStateInsuranceFamilyDetailFormViewModel


@{
    ViewBag.Title = Model.Title;
}

<h2>@ViewBag.Title</h2>

<div class="main-block">
    @using (Html.BeginForm("EmployeeStateInsuranceFamilyDetailsSave", "Employees", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="info">
            @Html.HiddenFor(m => m.emp_state_insu_fam_id)
            @Html.HiddenFor(m => m.Title)
            @Html.AntiForgeryToken()
            <hr />

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.full_name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.full_name, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.relation_with_ip, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.relation_with_ip, new SelectList(Model.NomineeRelations, "Id", "Name"), "--Select--", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.minor_major_id, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.minor_major_id, new SelectList(Model.MinorMajor, "Id", "Name"), "--Select--", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.birthdate, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.birthdate, "{0:dd MMM yyyy}", new { @class = "form-control", rows = "4" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.is_residing_with_ip, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.is_residing_with_ip, new SelectList(Model.YesNos, "Id", "Name"), "--Select--", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.state, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.state, new { @class = "form-control", rows = "4" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.district, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.district, new { @class = "form-control", rows = "4" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.city, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.city, new { @class = "form-control", rows = "4" })
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12 text-center">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    }
</div>

<input type="hidden" value="@Model.Title" id="Title" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}