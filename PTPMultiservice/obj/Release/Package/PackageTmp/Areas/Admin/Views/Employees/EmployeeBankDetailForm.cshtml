@model PTPMultiservice.ViewModels.EmployeeBankDetailFormViewModel


@{
    ViewBag.Title = Model.Title;
}

<h2>@ViewBag.Title</h2>

<div class="main-block">
    @using (Html.BeginForm("EmployeeBankDetailsSave", "Employees", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="info">
            @Html.HiddenFor(m => m.bank_id)
            @Html.HiddenFor(m => m.Title)
            @Html.AntiForgeryToken()
            <hr />

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.account_no, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.account_no, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.bank_holder_name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.bank_holder_name, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.bank_name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.bank_name, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.ifsc_code, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.ifsc_code, new { @class = "form-control", rows = "4" })
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.branch_name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.branch_name, new { @class = "form-control", rows = "4" })
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12 text-center">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    }
</div>

<input type="hidden" value="@Model.Title" id="Title" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}