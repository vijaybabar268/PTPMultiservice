@model PTPMultiservice.ViewModels.EmployeeStateInsuranceDetailFormViewModel


@{
    ViewBag.Title = Model.Title;
}

<h2>@ViewBag.Title</h2>

<div class="main-block">
    @using (Html.BeginForm("EmployeeStateInsuranceDetailsSave", "Employees", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    <div class="info">
        @Html.HiddenFor(m => m.emp_state_insurance_id)
        @Html.HiddenFor(m => m.Title)
        @Html.AntiForgeryToken()
        <hr />

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.disability_id, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.disability_id, new SelectList(Model.Disabilities, "Id", "Name"), "--Select--", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.previous_employer_code, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.previous_employer_code, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.previous_employer_name, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.previous_employer_name, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.previous_employer_address, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.previous_employer_address, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.previous_ip_no, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.previous_ip_no, new { @class = "form-control", rows = "4" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.nominee_name, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.nominee_name, new { @class = "form-control", rows = "4" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.nominee_address, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.nominee_address, new { @class = "form-control", rows = "4" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.relation_with_nominee_id, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.relation_with_nominee_id, new SelectList(Model.NomineeRelations, "Id", "Name"), "--Select--", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.per_share_towards_nominee, new { @class = "col-sm-4 col-form-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.per_share_towards_nominee, new { @class = "form-control", rows = "4" })
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12 text-center">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>

        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    }
</div>

<input type="hidden" value="@Model.Title" id="Title" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}