@model PTPMultiservice.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
}

<div style="display:block;">
    <div class="jumbotron">
        <h1>PTP MULTISERVICE DASHBOARD</h1>
        <p class="lead text-center">Pride Through Performance</p>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="well">
                <h3>@Html.ActionLink("All Partners", "Index", "Partners") <span class="label label-primary">@Model.Partners.ToList().Count()</span></h3>
                <p>Active <span class="label label-default">@Model.Partners.Where(x=>x.is_active).Count()</span></p>
                <p>In-Active <span class="label label-warning">@Model.Partners.Where(x => x.is_active == false).Count()</span></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="well">
                <h3>@Html.ActionLink("All Clients", "Index", "Clients") <span class="label label-primary">@Model.Clients.ToList().Count()</span></h3>
                <p>Active <span class="label label-default">@Model.Clients.Where(x=>x.is_active).Count()</span></p>
                <p>In-Active <span class="label label-warning">@Model.Clients.Where(x => x.is_active == false).Count()</span></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="well">
                <h3>@Html.ActionLink("All Employees", "Index", "Employees") <span class="label label-primary">@Model.Employees.ToList().Count()</span></h3>
                <p>Active <span class="label label-default">@Model.Employees.Where(x => x.is_active).Count()</span></p>
                <p>In-Active <span class="label label-warning">@Model.Employees.Where(x => x.is_active == false).Count()</span></p>
            </div>
        </div>
    </div>
</div>




<script>
    $(function () {
        $('footer').hide();
    })
</script>