@model PTPMultiservice.ViewModels.ClientFormViewModel


@{
    ViewBag.Title = Model.Title;
}

<h2>@ViewBag.Title</h2>

<div class="main-block">
    @using (Html.BeginForm("Save", "Clients", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="info">
            @Html.HiddenFor(m => m.client_id)
            @Html.HiddenFor(m => m.Title)

            @Html.AntiForgeryToken()
            <hr />

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.client_name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.client_name, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.region_id, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.region_id, new SelectList(Model.Regions, "Id", "Name"), "--Select--", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.branch, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.branch, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.industry_id, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.industry_id, new SelectList(Model.Industries, "Id", "Name"), "--Select--", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.site_address, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.site_address, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.corporate_office_address, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.corporate_office_address, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.remarks, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.remarks, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12 text-center">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    }
</div>

<input type="hidden" value="@Model.Title" id="Title" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function () {
        //debugger
        if ($("#Title").val() == "Client Details") {
            $("input, textarea, select").prop('disabled', true).css('border', 'none').css('background', 'none').removeClass('form-control');
            $('input[type="submit"]').hide();
        }
    });
</script>