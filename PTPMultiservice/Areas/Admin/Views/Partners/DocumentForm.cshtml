@model PTPMultiservice.ViewModels.DocumentFormViewModel


@{
    ViewBag.Title = Model.Title;
}

<h2>@ViewBag.Title</h2>

<div class="main-block">
    @using (Html.BeginForm("PartnerDocumentsSave", "Partners", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="info">
            @Html.HiddenFor(m => m.document_id)
            @Html.HiddenFor(m => m.Title)            
            @Html.AntiForgeryToken()
            <hr />

            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.type, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.type, new SelectList(Model.DocTypes, "Id", "Name"), "--Select--", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.name, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.number, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.number, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.birthdate, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.birthdate,"{0:dd-MMM-yyyy}", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.address, new { @class = "col-sm-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.address, new { @class = "form-control", rows = "4" })
                    </div>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-md-12 text-center">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    }
</div>

<input type="hidden" value="@Model.Title" id="Title" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}